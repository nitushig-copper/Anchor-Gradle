<resources 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
    tools:ignore="NewApi">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Anchor Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_anchor</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Anchor</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Anchor</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Anchor</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Anchor</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Anchor</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_anchor</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_anchor</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Anchor</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- item name="android:homeAsUpIndicator">@drawable/icn_acn_back</item -->


        <!-- LolliPop -->
        <!-- your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>

        <!-- Support library compatibility -->

        <item name="actionBarItemBackground">@drawable/selectable_background_anchor</item>
        <item name="popupMenuStyle">@style/PopupMenu.Anchor</item>

        <item name="dropDownListViewStyle">@style/DropDownListView.Anchor</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Anchor</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Anchor</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Anchor</item>
        <item name="actionModeBackground">@drawable/cab_background_top_anchor</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_anchor</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Anchor</item>
        <item name="windowActionBarOverlay">true</item>
        <!--item name="homeAsUpIndicator">@drawable/icn_acn_back</item-->
        
        <!-- LolliPop -->
         <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        
    </style>

    <style name="ActionBar.Solid.Anchor" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_anchor</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_anchor</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_anchor</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Anchor</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:elevation">0dp</item>

        <!-- Support library compatibility -->

        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@drawable/ab_solid_anchor</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_anchor</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_anchor</item>
        <item name="progressBarStyle">@style/ProgressBar.Anchor</item>
    </style>

    <style name="ActionBar.Transparent.Anchor" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_anchor</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Anchor</item>
        
        <item name="background">@drawable/ab_transparent_anchor</item>
        <item name="progressBarStyle">@style/ProgressBar.Anchor</item>
    </style>

    <style name="PopupMenu.Anchor" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_anchor</item>
    </style>

    <style name="DropDownListView.Anchor" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_anchor</item>
    </style>

    <style name="ActionBarTabStyle.Anchor" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_anchor</item>
    </style>

    <style name="DropDownNav.Anchor" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_anchor</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_anchor</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_anchor</item>
    </style>

    <style name="ProgressBar.Anchor" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_anchor</item>
    </style>

    <style name="ActionButton.CloseMode.Anchor" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_anchor</item>

    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Anchor.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Anchor</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Anchor</item>
        <item name="popupMenuStyle">@style/PopupMenu.Anchor</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Anchor</item>
    </style>

    <style name="MenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

        <!-- Support library compatibility -->
        <item name="textAllCaps">false</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_drawable</item>
    </style>

    <!-- Other Themes -->


    <!-- Application theme. No title -->
    <style name="NoTitleTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
         <!-- LolliPop -->
        <!-- your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        
         <!-- LolliPop -->
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CommentDialogTheme" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@drawable/instgram_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="category_dialog" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="map_overlay" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        
    </style>

     <style name="tips_dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <!-- Crop style -->
    <style name="Crop"></style>

    <style name="Crop.DoneCancelBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/crop__bar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@drawable/crop__divider</item>
        <item name="android:showDividers" tools:ignore="NewApi">middle</item>
        <item name="android:dividerPadding" tools:ignore="NewApi">12dp</item>
        <item name="android:background">@color/crop__button_bar</item>
    </style>

    <style name="Crop.ActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/crop__selectable_background</item>
    </style>

    <style name="Crop.ActionButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">20dp</item>
        <!-- Offsets left drawable -->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/crop__button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Crop.ActionButtonText.Done">
        <item name="android:drawableLeft">@drawable/crop__ic_done</item>
        <item name="android:text">@string/crop__done</item>
    </style>

    <style name="Crop.ActionButtonText.Cancel">
        <item name="android:drawableLeft">@drawable/crop__ic_cancel</item>
        <item name="android:text">@string/crop__cancel</item>
    </style>

    <style name="menu_button_style">
        <item name="android:paddingLeft">@dimen/menu_button_padding_left</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/menu_button_selector</item>
        <item name="android:textColor">@color/menu_item_text_selector</item>
    </style>
    
    <style name="help_dialog_style" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/help_window_bg</item>
    </style>
</resources>